{
  "manifest_version": 3,
  "version": "1.0.0",
  "name": "QuranStream Extension",
  "action": {
    "default_popup": "index.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "offscreen_documents": [
    {
      "matches": ["<all_urls>"],
      "reason": "AUDIO_PLAYBACK",
      "use_dynamic_url": true
    }
  ],
  "permissions": ["scripting", "storage", "offscreen"],
  "host_permissions": ["https://*/*", "https://*/*"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "css": ["extension-styles.css"]
    }
  ]
}
